<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="2dp"
        android:right="2dp"
        android:top="2dp"
        android:left="2dp">
        <selector xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:state_pressed="true">
                <shape android:shape="oval">
                    <corners android:radius="@dimen/circle_button_radius"/>
                    <solid android:color="@color/orange"/>
                    <size
                        android:width="@dimen/circle_button_diameter"
                        android:height="@dimen/circle_button_diameter"/>
                </shape>
            </item>

            <item>
                <shape android:shape="oval">
                    <corners android:radius="@dimen/circle_button_radius"/>
                    <solid android:color="@color/orange"/>
                    <size
                        android:width="@dimen/circle_button_diameter"
                        android:height="@dimen/circle_button_diameter"/>
                </shape>
            </item>

        </selector>
    </item>

</layer-list> 