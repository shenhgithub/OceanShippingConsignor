<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ListView
        android:id="@+id/activity_mobile_verification_result_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_mobile_verification_result_button"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/activity_mobile_verification_result_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_default_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/orange"
        android:text="@string/next_button"
        android:textColor="@android:color/white"
        android:textSize="@dimen/button_default_text_size"
        android:textStyle="bold"/>
</RelativeLayout>