<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_item_default_height"
              android:background="@drawable/list_view_item_select_background"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/explore_function_item_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_function_image_margin_left"
        android:layout_marginRight="@dimen/mine_function_image_margin_right"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/explore_function_item_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mine_function_text_margin_left"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:text="功能名"
        android:textColor="@color/black"
        android:textSize="@dimen/text_view_default_text_size"/>

